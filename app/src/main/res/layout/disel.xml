                        android:text="$345"

                        android:textColor="@color/white"
                        android:textSize="18dp"


                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"></TextView>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


